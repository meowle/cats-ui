doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Meowle - #{needle}
    link(rel='stylesheet', href='/css/bulma.min.css')
    link(rel='stylesheet', href='/css/fontawesome.all.min.css')
  body
    section.section.has-background-light
      .container
        .columns
          .column.is-2.has-text-right-desktop
            h1.is-size-3(style='margin-top: -0.5rem') 
              a.has-text-black(href='/') meowle
          .column
            form.field.has-addons(method='POST', action='/search')
              .control.is-expanded
                input.input(
                  type='text',
                  placeholder='Введите часть имени кота', 
                  autocomplete='off',
                  name='needle'
                )
              .control
                button.button(type='submit')
                  span.icon
                    i.fas.fa-search

    section.section
      .container
        .columns
          .column
            .level
              .level-item
                figure.image.is-64x64
                  img(src='/img/weary-cat.png')
            form.field(method='POST', action='/add')
              .control.has-text-centered
                .h2.subtitle
                  | Упс! Ничего не нашли
              br
              input(type='hidden', name='needle', value=needle)
              .control.has-text-centered
                button.button.is-warning.is-medium.button-search(type='submit')               
                  span Добавить&nbsp;
                  span.has-text-weight-bold= needle
                  span &nbsp;в базу?